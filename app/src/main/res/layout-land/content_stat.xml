<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_stat"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="sacha.kleynjans.edu.ece.fr.androidprojet.StatActivity"
    tools:showIn="@layout/app_bar_stat">

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">

            <TextView
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/score1"
                android:textAlignment="center"
                android:textSize="24sp"
                android:padding="10dp"
                android:textStyle="normal|bold"
                android:textColor="@color/colorPrimaryDark" />

            <TextView
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fautes1"
                android:textAlignment="center"
                android:textSize="24sp"
                android:padding="10dp"
                android:textStyle="normal|bold"
                android:textColor="@color/colorPrimaryDark" />

            <TextView
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/arrets1"
                android:textAlignment="center"
                android:textSize="24sp"
                android:padding="10dp"
                android:textStyle="normal|bold"
                android:textColor="@color/colorPrimaryDark" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">

            <TextView
                android:text="BUTS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buts"
                android:textAlignment="center"
                android:textSize="24sp"
                android:textStyle="normal|bold" />

            <TextView
                android:text="FAUTES"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/faute"
                android:textAlignment="center"
                android:textSize="24sp"
                android:textStyle="normal|bold" />

            <TextView
                android:text="ARRETS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/arrets"
                android:textSize="24sp"
                android:textAlignment="center"
                android:textStyle="normal|bold" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">

            <TextView
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/score2"
                android:textAlignment="center"
                android:textSize="24sp"
                android:padding="10dp"
                android:textStyle="normal|bold"
                android:textColor="@android:color/holo_red_dark" />

            <TextView
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fautes2"
                android:textAlignment="center"
                android:textSize="24sp"
                android:padding="10dp"
                android:textStyle="normal|bold"
                android:textColor="@android:color/holo_red_dark" />

            <TextView
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/arrets2"
                android:textAlignment="center"
                android:textSize="24sp"
                android:padding="10dp"
                android:textStyle="normal|bold"
                android:textColor="@android:color/holo_red_dark" />

        </TableRow>

    </TableLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Statistiques"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="24sp"
        android:id="@+id/titleStat" />

    <TextView
        android:text="Lieu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lieu"
        android:layout_below="@+id/titleStat"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:textStyle="normal|italic" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lieu"
        android:layout_toLeftOf="@+id/titleStat"
        android:layout_toStartOf="@+id/titleStat"
        android:layout_marginRight="38dp"
        android:layout_marginEnd="38dp">

        <TextView
            android:text="Equipe1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/equipe1"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="normal|bold"
            android:layout_alignBaseline="@+id/lieu"
            android:layout_alignBottom="@+id/lieu"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="60dp"
            android:textColor="@color/colorPrimaryDark" />

        <TextView
            android:text="Equipe 2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/equipe2"
            android:textSize="24sp"
            android:textStyle="normal|bold"
            android:layout_below="@+id/linearLayout2"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textColor="@android:color/holo_red_dark" />
    </LinearLayout>

</RelativeLayout>
