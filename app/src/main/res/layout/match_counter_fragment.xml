<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/content_stat"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingBottom="@dimen/activity_vertical_margin"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
app:layout_behavior="@string/appbar_scrolling_view_behavior"
tools:context="sacha.kleynjans.edu.ece.fr.androidprojet.MatchActivity">

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Match"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:textSize="24sp"
    android:id="@+id/titleStat" />

    <TableLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"
    android:layout_marginBottom="56dp">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp">

        <Button
            android:text="Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button" />

        <TextView
            android:text="BUTS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buts"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="normal|bold" />

        <Button
            android:text="Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button2" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp">

        <Button
            android:text="Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button5" />

        <TextView
            android:text="FAUTES"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/faute"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="normal|bold" />

        <Button
            android:text="Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button6" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp">

        <Button
            android:text="Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button3" />

        <TextView
            android:text="ARRETS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/arrets"
            android:textSize="24sp"
            android:textAlignment="center"
            android:textStyle="normal|bold" />

        <Button
            android:text="Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button4" />

    </TableRow>

</TableLayout>

<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/titleStat"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_marginTop="65dp">

    <TextView
        android:text="Equipe1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/equipe1"
        android:layout_weight="1"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="normal|bold" />

    <TextView
        android:text="Equipe 2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/equipe2"
        android:layout_weight="1"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="normal|bold" />
</LinearLayout>

<TextView
    android:text="Lieu"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/lieu"
    android:layout_below="@+id/titleStat"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="12dp"
    android:textStyle="normal|italic" />

    <Button
        android:text="Annuler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/annuler"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Fin du match"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/end_match"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
