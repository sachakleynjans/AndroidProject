<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_stat"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="sacha.kleynjans.edu.ece.fr.androidprojet.StatActivity"
    tools:showIn="@layout/app_bar_stat">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Statistiques"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="24sp"
        android:id="@+id/titleStat" />

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="56dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp">

            <TextView
                android:text="00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/score1"
                android:textAlignment="center"
                android:textSize="24sp"
                android:padding="10dp" />

            <TextView
                android:text="BUTS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buts"
                android:textAlignment="center"
                android:textSize="24sp"
                android:textStyle="normal|bold" />

            <TextView
                android:text="00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/score2"
                android:textAlignment="center"
                android:textSize="24sp"
                android:padding="10dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp">

            <TextView
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fautes1"
                android:textAlignment="center"
                android:textSize="24sp"
                android:padding="10dp" />

            <TextView
                android:text="FAUTES"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/faute"
                android:textAlignment="center"
                android:textSize="24sp"
                android:textStyle="normal|bold" />

            <TextView
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fautes2"
                android:textAlignment="center"
                android:textSize="24sp"
                android:padding="10dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp">

            <TextView
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/arrets1"
                android:textAlignment="center"
                android:textSize="24sp"
                android:padding="10dp" />

            <TextView
                android:text="ARRETS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/arrets"
                android:textSize="24sp"
                android:textAlignment="center"
                android:textStyle="normal|bold" />

            <TextView
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/arrets2"
                android:textAlignment="center"
                android:textSize="24sp"
                android:padding="10dp" />
        </TableRow>

    </TableLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titleStat"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="65dp">

        <TextView
            android:text="Equipe1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/equipe1"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="normal|bold" />

        <TextView
            android:text="Equipe 2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/equipe2"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="normal|bold" />
    </LinearLayout>

    <TextView
        android:text="Lieu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lieu"
        android:layout_below="@+id/titleStat"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:textStyle="normal|italic" />

</RelativeLayout>
